<!DOCTYPE html>
<html>
  <head>
    <title>Profiles</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Source+Sans:300,700,900', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to root_path, class: 'navbar-brand' do %>
            Profiles
          <% end %>

        </div>

        <% if profile_signed_in? %>
          <div class="pull-right">
            <%= link_to edit_profile_registration_path, class: 'navbar-btn btn btn-default' do %>
              <i class="glyphicon glyphicon-user"></i>
              <%= t('views.edit_profile') %>
            <% end %>
            <%= link_to destroy_profile_session_path, class: 'navbar-btn btn btn-default',
                                                      method: :delete do %>
              <i class="glyphicon glyphicon-log-out"></i>
              <%= t('views.sign_out') %>
            <% end %>
          </div>
        <% end %>
      </div>
    </nav>

    <main class="container">
      <%= render 'shared/flash_messages' %>
      <div class="row">
        <div class="col-sm-12">
          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
