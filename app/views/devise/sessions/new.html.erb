<h2><%= t('.login') %></h2>

<%= simple_form_for resource, url: session_path(resource_name) do |f| %>
  <%= f.input :email, input_html: {autofocus: true} %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me %>
  <% end %>

  <%= f.button :submit, t('.submit') %>
<% end %>

<%= render "devise/shared/links" %>
