<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title"><%= t('.recovery_password') %></h2>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, url: password_path(resource_name),
                              method: :put) do |f| %>

          <%= devise_error_messages! %>

          <%= f.input :password, label: t('.new_password') %>
          <%= f.input :password_confirmation, label: t('.confirm_new_password') %>

          <%= f.hidden_field :reset_password_token %>

          <%= f.button :submit, t('.submit'), data: {disable_with: t('views.wait')} %>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
