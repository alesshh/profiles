<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title"><%= t('.sign_up') %></h2>
      </div>
      <div class="panel-body">
        <%= simple_form_for resource, url: registration_path(resource_name) do |f| %>
          <%= f.error_notification %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <hr>
          <div class="row">
            <div class="col-sm-6">
              <%= f.association :state %>
            </div>
            <div class="col-sm-6">
              <%= f.input :age %>
            </div>
          </div>
          <%= f.input :job_title %>

          <%= f.button :submit, t('.submit'), data: {disable_with: t('views.wait')} %>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
