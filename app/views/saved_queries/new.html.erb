<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= simple_form_for @saved_query do |f| %>
          <%= f.input :name %>
          <%= f.input :parameters, as: :hidden %>
          <%= f.button :submit %>
          &nbsp;
          <%= link_to t('views.cancel'), root_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
